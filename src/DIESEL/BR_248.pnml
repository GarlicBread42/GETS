							1: spriteset_BR_248_panto_down_purchase;}
							
						switch(FEAT_TRAINS,PARENT,switch_panto_BR_248, tile_powers_railtype("ELRL")){
							1: return spriteset_BR_248_panto_up;
								return spriteset_BR_248_panto_down;}								

						switch(FEAT_TRAINS, SELF, switch_spritestack_BR_248_Captrain, [STORE_TEMP((getbits(extra_callback_info1, 8, 8) < 1 ? CB_FLAG_MORE_SPRITES : 0) | PALETTE_USE_DEFAULT, 0x100), getbits(extra_callback_info1, 8, 8)]) {
