							1: spriteset_BR_248_panto_down_purchase;}	

						switch(FEAT_TRAINS, SELF, switch_spritestack_BR_248_Press_purchase, [STORE_TEMP((getbits(extra_callback_info1, 8, 8) < 1 ? CB_FLAG_MORE_SPRITES : 0) | PALETTE_USE_DEFAULT, 0x100), getbits(extra_callback_info1, 8, 8)]) {
